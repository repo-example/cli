{
	"name"                             : "{{tag}}",
	"version"                          : "{{version}}",
	"description"                      : "{{desc}}",
	"keywords"                         : "{{kw}}",
	"license"                          : "{{license}}",
	"homepage"                         : "{{homepage}}",
	"bugs": {
		"url"                          : "{{issues}}"
	},
	"author": {
		"name"                         : "{{author_name}}",
		"email"                        : "{{author_email}}",
		"url"                          : "{{author_url}}"
	},
	"repository": {
		"type"                         : "git",
		"url"                          : "{{git_url}}"
	},
	"type"                             : "module",
	"main"                             : "./dist/index.js",
	"types"                            : "./dist/index.d.ts",
	"bin": {
		"{{name}}"                     : "./dist/index.js"
	},
	"files"                            : ["dist"],
	"exports": {
		".": {
			"types"                    : "./dist/index.d.ts",
			"import"                   : "./dist/index.js",
			"require"                  : "./dist/index.js"
		}
	},
	"scripts": {
		"build"                        : "tsup",
		"lint"                         : "eslint src --ext .ts",
		"test"                         : "bun test"
	},
	"engines": {
		"bun"                          : ">=1.3.3"
	},
	"peerDependencies": {
		"bun"                          : ">=1.3.3"
	},
	"dependencies": {
		"@minejs/cli"                  : "^0.0.7"
	},
	"devDependencies": {
		"@eslint/js"                   : "^9.34.0",
		"@stylistic/eslint-plugin"     : "^5.3.1",
		"@types/bun"                   : "^1.1.13",
		"@types/node"                  : "^20.12.7",
		"bun-plugin-dts"               : "^0.3.0",
		"bun-types"                    : "^1.1.38",
		"ts-node"                      : "^10.9.2",
		"tsup"                         : "^8.5.1",
		"typescript"                   : "^5.4.5",
		"typescript-eslint"            : "^8.42.0"
	}
}
